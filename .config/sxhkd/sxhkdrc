# -----------------------------------------------------------------------------
# Independent hotkeys
# -----------------------------------------------------------------------------

super + Return 
	alacritty

super + @space
	rofi -show drun -show-icons

super + c
	rofi -show calc -modi calc -no-show-match -no-sort

super + shift + Return
	firefox


# -----------------------------------------------------------------------------
# BSPWM Hotkeys
# -----------------------------------------------------------------------------
# restart bspwm
super + shift + r
	bspc wm -r 
	pkill -USR1 -x sxhkd

# exit bspwm
super + shift + e 
	bspc quit

# close focused window
super + q  
	bspc node -c 

# switch layout
super + m 
	bspc desktop -l next


# -----------------------------------------------------------------------------
# Focus and swapping
# -----------------------------------------------------------------------------

# focus the node in the given direction
super + {_,shift + } {h, j, k, l}
	bspc node -{f, s} {west, south, north, east}
