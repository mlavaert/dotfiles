[general]
status_path = "~/.local/share/vdirsyncer/status/"

[pair icloud_calendars]
a = "icloud"
b = "local"
collections = ["from a", "from b"]
metadata = ["displayname"]

[storage icloud]
type = "caldav"
url = "https://caldav.icloud.com"
auth = "basic"
username = "apple@mlavaert.xyz"
password.fetch = ["command", "sh", "-c", "pass show icloud/app-password | tr -d '\\n'"]

[storage local]
type = "filesystem"
path = "~/.local/share/vdirsyncer/calendars/"
fileext = ".ics"
