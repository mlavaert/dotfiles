{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "jean",
  "mcp": {
    "duckduckgo": {
      "type": "local",
      "command": [
        "uvx",
        "duckduckgo-mcp-server"
      ]
    },
    "grep-app": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "dev-browser": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "open-dev-browser"
      ]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
